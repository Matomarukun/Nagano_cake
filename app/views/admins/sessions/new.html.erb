<div class="body">
      <div class="container">
        <p class="gr-index"><%=  notice %></p>
        <div class="row">
          <div class="top-message col-md-offset-2 col-md-7">
            <div class="btn-wrapper">
              <h4><mark>管理者ログイン</mark></h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

   <div class="field text-center">
      メールアドレス
      <%= f.email_field :email, :size=>"40", autofocus: true, autocomplete: "email" %>
    </div>
    <br>

    <div class="field text-center">
      パスワード　　<!---->
      <%= f.password_field :password, :size=>"40", autocomplete: "current-password" %>
    </div>
    </br>

  <div class="actions">
    <%= f.submit "ログイン" ,class: 'btn btn-primary center-block'%>
  </div>
<% end %>

     </div>
    </div>
  </div>
</div>