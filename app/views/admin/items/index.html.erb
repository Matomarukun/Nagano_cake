<h3><mark>商品一覧</mark></h3>
<div class="pull-right">
  <%=link_to new_admin_item_path do %>
    <i class="glyphicon glyphicon-plus-sign add_icon"></i>
  <% end %>

</div>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item|%>
      <tr>
        <td>
          <p><%= item.id %></p>
        </td>
        <td>
          <%= link_to item.name, admin_item_path(item.id), class: "show_page" %>
        </td>
        <td>
          <p><%= item.price %></p>
        </td>
        <td>
          <p><%= item.genre.name %></p>
        </td>
        <td>
          <p><%= item.is_active == true ? "販売" : "売り切れ" %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>