<div class="container">
  <div class="row">
      <h3><mark>商品詳細</mark></h3>
    <div class="col-md-5">
      <%= attachment_image_tag @item, :image, :fill, 300, 180, format: 'jpeg' %>
    </div>
    <div class="col-md-7">
      <div>
        <p>商品名</p>
        <p><%= @item.name %></p>
      </div>
      <div>
        <p>商品説明</p>
        <p><%= @item.introduction %></p>
      </div>
      <div>
        <p>ジャンル</p>
        <p><%= @item.genre_id %></p>
      </div>
      <div>
        <p>税込価格（税抜価格</p>
        <p><strong><%= @item.price %></strong>円</p>
      </div>
      <div>
        <p>販売ステータス</p>
        <p><%= @item.is_active == true ? "販売" : "売り切れ" %></p>
      </div>
      <div>
        <%= link_to "編集する", edit_admin_item_path, class: "btn btn-info active" %>
      </div>
    </div>

    <div>
    </div>
  </div>
</div>