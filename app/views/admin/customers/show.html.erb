<div class="container">
  <div class="row">
    <h3><mark><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</mark></h3>
    <!--<div class="pull-right">-->
    <!--  %=link_to "", new_admin_item_path, class: "glyphicon glyphicon-plus-sign add_icon "%>-->
    <!--</div>-->
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>顧客ID</th>
          <th>氏名</th>
          <th>フリガナ</th>
          <th>郵便番号</th>
          <th>住所</th>
          <th>電話番号</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
          <%= form_with model: @customer, local:true do |customer| %>
        <tr>
          <td>
            <p><%= @customer.id %> <%= @customer.is_deleted == true ? "無効会員" : "有効会員" %></p>
          </td>
          <td>
            <p><%= @customer.last_name %><%= @customer.first_name %></p>
          </td>
          <td>
            <p><%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
          </td>
          <td>
            <p><%= @customer.postal_code %></p>
          </td>
          <td>
            <p><%= @customer.address %></p>
          </td>
          <td>
            <p><%= @customer.phone_number %></p>
          </td>
          <td>
            <p><%= @customer.email %></p>
          </td>
        </tr>
          <% end %>
      </tbody>
    </table>

   　　 <div><%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn-sm btn-success" %></div>
     　<div><%= link_to '注文履歴一覧をみる',  edit_admin_customer_path(@customer),  class: "btn-sm btn-danger" %></div>
      </tr>
  </div>
</div>
