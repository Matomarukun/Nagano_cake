<h3><mark>注文履歴一覧</mark></h3>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody> 
     <% @orders.each do |order|%>
    <tr>
      <td>
        <p>
          <%= link_to order.created_at, admin_order_path(order.id) %>
        </p>
      </td>
      <td>
        <p>
          <%= order.last_name %><%= order.first_name %>
        </p>
      </td>
      <td>
        <p>
          <%= order.amount %>
        </p>
      </td>
      <td>
        <p>確認
          <!--制作ステータス-->
        </p>
      </td>
    </tr>
      <% end %>
  </tbody>
</table>
<%= paginate @orders %>
