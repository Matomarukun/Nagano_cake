<div class="container">
<div class='row'>
<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, local: true do |f| %>
    <%= f.label "ジャンル" %><%= f.text_field :name %>
    <%= f.select :is_active, [['有効',0],['無効',1]], { include_blank: true, selected: 0 } %>
    <%= f.submit "追加" , class: "btn-sm btn-success" %>
<% end %>

<!--%= form_with model: @genre, local:true, url:new_admins_genre_path do |f| %>-->


 <tbody>
  <table border="1">

    <% @genres.each do |genre| %>
    <div>
      ジャンル <%= genre.name %>
      状態 <%= genre.is_active == true ? "有効" : "無効" %>
       　   <%= link_to 'Edit', edit_admins_agenre_path(@genre), class: "btn-sm btn-succes" %>
    </div>
   <% end %>

   </table>
 </tbody>
</div>