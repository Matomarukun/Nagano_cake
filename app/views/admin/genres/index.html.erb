<div class="container">
<div class='row'>
<h3><mark>ジャンル一覧・追加</mark></h3>

<%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>


    <%= f.label "ジャンル" %><%= f.text_field :name %>
    <%= f.select :is_active, [['有効',0],['無効',1]], { include_blank: true, selected: 0 } %>
    <%= f.submit "追加" , class: "btn-sm btn-success" %>
<% end %>


 <tbody>
  <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th>　</th>
        </tr>
       </thead>

    <% @genres.each do |genre| %>
     <tr>
      <td>
       <p><%= genre.name %></p>
      </td>
      <td>
       <p><%= genre.is_active == true ? "無効" : "有効" %></p>
      </td>
      <td>
       　  <%= link_to '編集する',edit_admin_genre_path(genre), class: "btn-sm btn-succes" %>
      </td>
     </tr>
   <% end %>
   </table>
  </tbody>
 </table>
</div>
</div>