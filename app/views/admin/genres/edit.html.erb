<div class="container">
 <div class='row'>
  <h1>ジャンル編集</h1>

<%= form_with model: @genre, local: true do |f| %>
    <%= f.label "ジャンル" %><%= f.text_field :name %>
    <%= f.select :is_active, [['有効',0],['無効',1]], { include_blank: true, selected: 0 } %>
    <%= f.submit "変更を保存", class: "btn-sm btn-success" %>
<% end %>

 </div>
</div>