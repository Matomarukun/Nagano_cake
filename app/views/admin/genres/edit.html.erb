<div class="container">
 <div class='row'>
  <h3><mark>ジャンル編集</mark></h3>

<%= form_with model: @genre, url:admin_genre_path, local: true do |f| %>
    <%= f.label "ジャンル" %><%= f.text_field :name %>
    <%= f.select :is_active, [['有効',0],['無効',1]], { include_blank: true, selected: 0 } %>
    <%= f.submit "変更を保存する" , class: "btn-sm btn-success" %>
<% end %>

 </div>
</div>