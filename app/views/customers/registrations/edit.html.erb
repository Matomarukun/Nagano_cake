<div class="container">
  <div class="row">
    <div class="top-message col-md-offset-2 col-md-9">
      <div class="btn-wrapper">
        会員情報編集
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <table class="table table-hover table-inverse">

              <thead>
                  <th></th>
                  <th></th>
                  <th></th>
              </thead>

              <tbody>
                <th>名前(姓)</th>
                <th>
                <div class="field">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                </div>
                <th>
                  <div class="field">
                  (名)
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>
                </th>
              </tbody>

              <tbody>
                <th>フリガナ(セイ)</th>
                <th>
                <div class="field">
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                </div>
                <th>
                  <div class="field">
                  (ナ)
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                </div>
                </th>
              </tbody>

              <tbody>
                <th>メールアドレス</th>
                <th>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                </th>
              </tbody>

                <tbody>
                <th>郵便番号（ハイフンなし）</th>
                <th>
                <div class="field">
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                </div>
              </tbody>

              <tbody>
                <th>住所</th>
                <th>
                <div class="field">
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                </div>
              </tbody>

               <tbody>
                <th>電話番号（ハイフンなし）</th>
                <th>
                <div class="field">
                <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
                </div>
              </tbody>


  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>



              </table>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>