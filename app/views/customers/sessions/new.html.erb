<div class="body">
      <div class="container">
        <p class="gr-index"><%=  notice %></p>
        <div class="row">
          <div class="top-message col-md-offset-2 col-md-7">
            <div class="btn-wrapper">
              <h4><mark>会員の方はこちらからログイン</mark></h4>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class="field text-center">
                      メールアドレス
                      <%= f.email_field :email, :size=>"50", autofocus: true, autocomplete: "email" %>
                    </div>
                    <br>

                  <div class="field text-center">
                    パスワード　　<!---->
                    <%= f.password_field :password, :size=>"50", autocomplete: "current-password" %>
                  </div>

                  <div class="field text-right">
                    <%= link_to "＝＞パスワードをお忘れの方はこちら", new_password_path(resource_name) %></br>
                    </div>



                  <% if devise_mapping.rememberable? %>
                    <div class="actions">
                    <input type="submit" name="commit" value="　ログイン　" class="btn btn-primary center-block" data-disable-with="　ログイン　">
                    </div>
                  <br>
                  <% end %>
                  <h4><mark>登録がお済ではない方</mark></h4>
                    <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。
            </div>
            <% end %>
      </div>
    </div>
  </div>
</div>