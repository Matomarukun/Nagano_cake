<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if customer_signed_in? %>
    　<li>ようこそ、<%= current_user.name %>さん！
      <li><%= link_to ' マイページ', customers_my_page_path, class: "btn btn-primary" %></li>
      <li><%= link_to ' 商品一覧', items_path, class: "btn btn-success" %></li>
      <li><%= link_to ' カート', cart_items_path, class: "btn btn-info" %></li>
      <li><%= link_to " ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-danger" %></li>
    <% elsif admin_signed_in? %>
      <li><%= link_to ' 商品一覧', admins_items_path, class: "btn btn-primary" %></li>
      <li><%= link_to ' 会員一覧', admins_customers_path, class: "btn btn-success" %></li>
      <li><%= link_to ' 注文履歴一覧', admins_orders_path, class: "btn btn-info" %></li>
      <li><%= link_to ' ジャンル一覧', admins_genres_path, class: "btn btn-warning" %></li>
      <li><%= link_to ' ログアウト', destroy_admin_session_path, class: "btn btn-danger" %></li>
    <% else %>
      <li><%= link_to ' About', about_path, class: "btn btn-primary" %></li>
      <li><%= link_to ' 商品一覧', items_path, class: "btn btn-success" %></li>
      <li><%= link_to ' 新規登録', new_customer_registration_path, class: "btn btn-warning" %></li>
      <li><%= link_to ' ログイン', new_customer_session_path, class: "btn btn-danger" %></li>
    <% end %>
    <%= yield %>
    <footer>

    </footer>
  </body>
</html>
