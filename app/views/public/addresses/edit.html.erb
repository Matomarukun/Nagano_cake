
<h1>Public::Addresses#edit</h1>
<p>Find me in app/views/public/addresses/edit.html.erb</p>

<div class='row'>
<h1>配送先編集</h1>

<%= form_for(@adress) do |f|%>
 <div class="field">
      <%= f.label :postal_code, '郵便番号' %>
      <%= f.text_field :postal_code, autofocus: true %>
 </div>

 <div class="field">
      <%= f.label :adress, '住所' %>
      <%= f.text_field :adress, autofocus: true %>
 </div>

 <div class="field">
      <%= f.label :name, '宛名' %><br />
      <%= f.text_field :name %>
 </div>

 <div class="actions">
    <%= f.submit "編集する" ,class: 'btn btn-success' %>
 </div>
<% end %>

</div>

