<div class="container">
 <div class='row'>
  <h3><mark>配送先編集</mark></h3>


 <%= form_with model: @address, url: address_path(@address), local:true do |f| %>
<table class="table table-hover table-inverse">
 <div class="field">
      <%= f.label '郵便番号(ハイフンなし)' %>
      <%= f.text_field :postal_code, autofocus: true %>
 </div>

 <div class="field">
      <%= f.label '住所' %>
      <%= f.text_field :address, autofocus: true %>
 </div>

 <div class="field">
      <%= f.label '宛名' %><br />
      <%= f.text_field :name %>
 </div>

</table>

 <div class="actions">
    <%= f.submit '編集する' ,class: 'btn btn-success' %>
 </div>
 <% end %>


 </div>
</div>

