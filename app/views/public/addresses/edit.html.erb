<div class="container">
 <div class='row'>
  <h1>配送先編集</h1>


<table class="table table-hover table-inverse">
 <%= form_with model: @address, url: edit_address_path(@address), local:true do |f| %>
 <div class="field">
      <%= f.label :postal_code, '郵便番号' %>
      <%= f.text_field :postal_code, autofocus: true %>
 </div>

 <div class="field">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address, autofocus: true %>
 </div>

 <div class="field">
      <%= f.label :name, '宛名' %><br />
      <%= f.text_field :name %>
 </div>

</table>

 <div class="actions">
    <%= f.submit '編集する' ,class: 'btn btn-success' %>
 </div>
 <% end %>


 </div>
</div>

