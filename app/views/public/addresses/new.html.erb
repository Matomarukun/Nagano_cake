<div class='row'>
<h1>配送先登録・一覧</h1>

<%= form_for(@adress) do |f|%>

<!-- 郵便番号 -->
    <div class="field">
      <%= f.label :postal_code, '郵便番号' %>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>

<!--市区町村-->

    <div class="field">
      <%= f.label :adress, '住所' %>
      <%= f.text_field :adress, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :name, '宛名' %><br />
      <%= f.text_field :name %>
    </div>

    <div class="actions">
    <%= f.submit "登録する" ,class: 'btn btn-success' %>
    </div>
<% end %>

 <tbody>

    <% @addresse.each do |addresse| %>
      <tr id="addresse_<%= addresse.id %>">
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
         <td id="favorite-btn_<%= book.id %>">
            <%= render "favorites/favorite-btn", book: book %></td>
        <td class="comments-count">コメント数: <%= book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>

   <table border="1">

      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th>　　　　</th>
        <th>　　　　</th>
      </tr>
      <tr>
      <% @addresse.each do |addresse| %>
        <th><%= postal_code.body %></th>
        <th><%= addresse.body %></th>
        <th><%= name.body %></th>
        <% if @addresse.user == current_user %>
          <td><%= link_to 'Edit', edit_public_address_path(@addresse), class: "btn-sm btn-succes" %></td>
          <td><%= link_to 'Destroy', public_address_path(@addresse), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger" %></td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </tbody>
</div>

