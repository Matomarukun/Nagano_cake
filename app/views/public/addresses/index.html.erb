<h1>配送先登録/一覧</h1>

 <%= form_with model: @customers, url: new_public_address_path, id: 'customer_id', class: 'new_user', local: true do |f| %>
  <!--%= render "devise/shared/error_messages", resource: resource %>-->

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :宛名 %><br />
    <%= f.text_field :name %>
  </div>


  <div class="actions">
    <%= f.submit "登録する" ,class: 'btn btn-success' %>
  </div>
<% end %>


