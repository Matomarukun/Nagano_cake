
<%= form_with model: address, url:addresses_path, local:true do |f| %>

    <div class="field">
      <%= f.label :postal_code, '郵便番号' %>
      <%= f.text_field :postal_code, autofocus: true, size: 8 %>
    </div>

    <div class="field">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address, autofocus: true, size: 50 %>
    </div>

    <div class="field">
      <%= f.label :name, '宛名' %><br />
      <%= f.text_field :name, size: 30 %>
    </div>

    <div class="actions">
    <%= f.submit "登録する" ,class: 'btn btn-success' %>
    </div>
<% end %>
