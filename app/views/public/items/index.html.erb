
<div class="container">
  <div class="col-md-3"  >
    <div  class="genre-search">
      <table>
       <tr>
        <th><h4><strong>ジャンル検索</strong></h4></th>
       </tr>
       <% @genres.first(4).each do |genre| %>
        <tr class="genre-name">
          <td><li><%= link_to genre.name %></li></td>
         </tr>
       <% end %>
      </table>
    </div>
  </div>

<div class="col-md-9">
  <div>
    <h2><strong>商品一覧</strong>（全<%= @items.count %>件）</h2>
  </div>
  <div class="row" >
    <% @items.each do |item| %>
      <div class="col-md-4 item-block">
        <div class="item-image">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, fallback:"no_image.jpg", size: '250x160' %>
              <div class="item-name"><h4><%= link_to item.name, item_path(item.id) %></h4></div>
            <% end %>
              <div><h4>¥ <%= item.price %></h4></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
