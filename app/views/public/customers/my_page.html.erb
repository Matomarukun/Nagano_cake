<div class="container">
  <div class="row">
    <div class="top-message col-md-6">
      <div class="btn-wrapper">
        <h3>マイページ</h3>
        <span class="span_word">登録情報　</span>
        <%= link_to "編集する",edit_customer_registration_path , class: 'btn btn-primary' %>
        <%= link_to "パスワードを変更する",edit_customer_password_path , class: 'btn btn-primary' %>

        <table class="table table-bordered">
              <tbody>
                <th class="active" >氏名</th>
                <th>
                 <div>
                  <%= current_customer.last_name %>　<%= current_customer.first_name %>
                 </div>
                </th>
              </tbody>

              <tbody>
                <th class="active" >カナ</th>
                <th>
                 <div>
                  <%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %>
                 </div>
                </th>
              </tbody>

              <tbody>
                <th class="active" >郵便番号</th>
                <th>
                 <div>
                  <%= current_customer.postal_code %>
                 </div>
                </th>
              </tbody>

              <tbody>
                <th class="active" >住所</th>
                <th>
                 <div>
                  <%= current_customer.address %>
                 </div>
                </th>
              </tbody>

              <tbody>
                <th class="active" >電話番号</th>
                <th>
                 <div>
                  <%= current_customer.phone_number %>
                 </div>
                </th>
              </tbody>

              </table>

              <span class="span_word">配送先　　</span><%= link_to "一覧を見る",addresses_path , class: 'btn btn-primary' %>
              </br>
              </br>
              <span class="span_word">注文履歴　</span><%= link_to "一覧を見る",orders_path , class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>