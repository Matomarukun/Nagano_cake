<div class="container">
  <div class="row">
    <h3><mark>注文履歴詳細</mark></h3>
    <div class="top-message col-md-8 ">
    <h4>注文情報</h4>
    <table class="table table-bordered ">
      <tbody>
        <th class="active my_active">注文日</th>
        <th>
          <div>
         <%= @order.created_at.strftime('%Y/%m/%d') %>
          </div>
        </th>
      </tbody>

      <tbody>
        <th class="active">配送先</th>
        <th>
          <div>
            <%= @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %></br>
          </div>
        </th>
      </tbody>

      <tbody>
        <th class="active">支払方法</th>
        <th>
          <div><%= @order.method_pay %></div>
        </th>
      </tbody>

      <tbody>
        <th class="active">ステータス</th>
        <th>
          <!--<div>%= @order.status %></div>-->
        </th>
      </tbody>

    </table>
    </div>
    <div class="top-message col-md-4">
    <table class="table table-bordered">
      <h4>請求情報</h4>
      <tbody>
        <th class="active">商品合計</th>
        <th>
          <div><%= @order.order_sum %> 円</div>
        </th>
      </tbody>
       <tbody>
        <th class="active">配送料</th>
        <th>
          <div>800 円</div>
        </th>
      </tbody>

       <tbody>
        <th class="active">ご請求額</th>
        <th>
          <div><%= @order.sum_of_price %> 円</div>
        </th>
      </tbody>
    </table>
    </div>
    <div class="top-message col-md-8">
     <table class="table table-hover table-inverse table-bordered">
       <h4>注文内容</h4>
          <thead>
            <th class="active show_ordre">商品</th>
            <th class="active show_tanka">単価(税込)</th>
            <th class="active show_kazu" >個数</th>
            <th class="active ">小計</th>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.price %></td>
              <td><%= order_item.amount %></td>
              <td><%= (order_item.item.price*order_item.amount).floor %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>