<div class="container">
  <div class="row">
    <h3><mark>注文履歴一覧</mark></h3>
    <table class="table table-bordered">
      <thead>
          <th class="active created_at">注文日</th>
          <th class="active addresses">配送先</th>
          <th class="active order_items">注文商品</th>
          <th class="active pay">支払金額</th>
          <th class="active status">ステータス</th>
          <th class="active">注文詳細</th>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
      <tr>
        <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
        <th><%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.name %></br>
        </th>
        <th><% order.order_items.each do |order_item| %>
            <%= order_item.item.name %></br>
            <% end %></th>
        <th><%= order.order_sum %></th>
        <th><%= order.status %></th>
        <th><%= link_to "表示する", order_path(order) %></th>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>