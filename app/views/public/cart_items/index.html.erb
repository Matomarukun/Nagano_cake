<div class="container">
   <div class="row">
     <div class="col-xs-9">
<thead>
  <div class="table-responsive">
    <table class="table">
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th colspan="3"></th>
  </tr>
  </div>
  </div>
</thead>

<%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete, class:"btn btn-danger" %>

<tbody>
  <div class="table-responsive">
    <table class="table">
  <% sum = 0 %>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, fallback:"no_image.jpg", size: '40x40' %></td>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price %></td>
      <!--<td><= cart_item.amount %></td>-->
      <td>
        <%= form_with model: cart_item, local: true do |f| %>
          <%= f.number_field :amount %>
          <%= f.submit '変更', class: "btn btn-primary" %>
        <% end %>
      </td>
      <% sub_total = cart_item.item.price * cart_item.amount %>
      <td><%= sub_total %></td>
      <% sum += sub_total %>
      <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
    </tr>

  <% end %>
  <tr>
  <td><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></td>
  <td>合計金額<%= sum %></td>
  </tr>

  </table>
  </div>
</tbody>
</div>
</div>
</div>