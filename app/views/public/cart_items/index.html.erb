<thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @cart_item.each do |item| %>
    <tr>
      <td><%= attachment_image_tag(items, :image_id, fallback:"no_image.jpg", size: '40x40') %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <%= form_with model: amount, local: true do |f| %>
      <td><%= f.number_field.count %></td>
      <%= f.submit '変更', class: "btn btn-primary btn-block" %>
      <td><%= 合計.item.price %></td>
      <td><%= link_to "Destroy", request.referer, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>